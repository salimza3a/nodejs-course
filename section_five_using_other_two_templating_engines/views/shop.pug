extends layouts/main-layout.pug

block styles 
   link(rel="stylesheet", href="/css/main.css")

block content
    main 
            if prods.length > 0
                .grid

                    each product in prods
                        article.card.product-item
                            header.card__header 
                                h1.product__title #{product.title}
                            div.card__image
                                img(src="https://flipcause-assets.s3.amazonaws.com/summernote_images/1650859173-278657186_674451733850899_4053099720447312349_n.jpg", alt="Pug", ) 
                            div.card__content  
                                h2.product__price $19.99
                                p.product__description Lorem ipsum dolor sit amet consectetur adipisicing elit. Explicabo ducimus excepturi alias voluptatem! Minima, provident.
                            .card__actions 
                                 button.btn Add to Cart
            else 
                h1 No Products

