extends ../layouts/main-layout.pug

block styles 
   link(rel="stylesheet", href="/css/main.css")

block content
    main 
            if prods.length > 0
                .grid

                    each product in prods
                        article.card.product-item
                            header.card__header 
                             h2 #{product.title}
                            div.card__image
                                img(src=product.imageUrl, alt=product.title, width='225px' )
                            div.card__content  
                                h2.product__price #{product.price}
                                p.product__description #{product.description}
                            .card__actions 
                                button.btn(type="submit", value = product.id)  Delete
                                 form(action="/card", method="post")
                                    button(type="submit", class = "btn") Add to Card  
                                    input(type="hidden", name="productId", value = product.id)
            else 
                h1 No Products

