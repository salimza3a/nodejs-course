extends ../layouts/main-layout.pug

block styles 
   link(rel="stylesheet", href="/css/main.css")

block content
    main 
            if prods.length > 0
                .grid

                    each product in prods
                        article.card.product-item
                            header.card__header 
                                
                            div.card__image
                                img(src=product.imageUrl, alt=product.title, width='225px' )
                            div.card__content  
                                h2.product__price #{product.price}
                                p.product__description #{product.description}
                            .card__actions
                                form(action="/add-to-card/1", method="post")   
                                    button.btn(type="submit") Add to Card 
            else 
                h1 No Products

